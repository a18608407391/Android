<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"></import>

        <variable
            name="data"
            type="com.cstec.administrator.party_module.ViewModel.PartyMoboDetailViewModel"></variable>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_432">

        <com.elder.zcommonmodule.Widget.RatioImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:PartyTopBg="@{data.data.FILE_NAME_URL}"
            app:ratio="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_70"
            android:visibility="@{data.visible?View.GONE:View.VISIBLE}">

            <ImageView
                android:id="@+id/detail_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d_15"
                android:onClick="@{data::onClick}"
                android:src="@drawable/arrow_black"></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d_15"
                android:src="@drawable/three_point"></ImageView>
        </RelativeLayout>


    </RelativeLayout>

</layout>
