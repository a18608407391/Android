<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hot_recommand"
            type="com.cstec.administrator.party_module.PartyHomeEntity.HotRecommend"></variable>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/d_264"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_10"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d_264"
            android:layout_height="@dimen/d_168"
            android:scaleType="fitXY"
            app:LoadRoadImg="@{hot_recommand.FILE_NAME_URL}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10"
            android:text="@{hot_recommand.TITLE}"
            android:textColor="@color/black_12"
            android:singleLine="true"
            android:textSize="@dimen/s_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_02"
            android:text="@{hot_recommand.ACTIVITY_START}"
            android:textColor="#A4A4A4"
            android:textSize="@dimen/s_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{hot_recommand.TICKET_PRICE}"
            android:textColor="#F5222D"
            android:textSize="@dimen/s_15" />

    </LinearLayout>
</layout>
