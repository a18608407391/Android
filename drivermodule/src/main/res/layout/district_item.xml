<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_36"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/point_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_error_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/point_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_marginRight="@dimen/d_20"
        android:layout_marginLeft="@dimen/d_32"
        android:text="长沙市" />


    <ImageView
        android:id="@+id/point_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/direct_change"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/FivepercentBlackColor"></View>

</RelativeLayout>