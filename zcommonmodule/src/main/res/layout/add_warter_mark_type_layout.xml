<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="android.view.View"></import>

        <variable
            name="makerEntity"
            type="com.elder.zcommonmodule.Entity.MakerEntity"></variable>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/d_58"
        android:layout_height="@dimen/d_58"
        android:layout_marginLeft="@dimen/d_15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/marker_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/marker_selector_bg"
            android:visibility="@{makerEntity.isChecked ?View.VISIBLE:View.GONE}" />

        <ImageView
            android:id="@+id/acse"
            android:layout_width="@dimen/d_56"
            android:layout_height="@dimen/d_56"
            android:layout_centerInParent="true"
            android:src="@drawable/warter_marker" />


    </RelativeLayout>
</layout>
