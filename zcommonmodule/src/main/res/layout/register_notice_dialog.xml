<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#55000000">


    <LinearLayout
        android:layout_width="@dimen/d_280"
        android:layout_height="@dimen/d_171"
        android:background="@drawable/corner_dialog"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/register_notice_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ok_ovel" />


        <TextView
            android:id="@+id/register_notice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10"
            android:text="@string/register_success"
            android:textColor="@color/nomalTextColor"
            android:textSize="@dimen/s_15" />

    </LinearLayout>

</LinearLayout>