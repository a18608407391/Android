<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="guide_model"
            type="com.elder.amoski.ViewModel.GuideViewModel"></variable>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.elder.zcommonmodule.Widget.FixedTextureVideoView
            android:id="@+id/guide_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_27"
            android:layout_marginTop="@dimen/d_46"
            android:src="@drawable/splash_tv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d_50"
                android:background="@drawable/theme_circle"
                android:gravity="center"
                android:onClick="@{guide_model::onClick}"
                android:text="开启我的摩旅"
                android:textColor="@color/white"
                android:textSize="@dimen/s_18" />
        </LinearLayout>
    </RelativeLayout>
</layout>
