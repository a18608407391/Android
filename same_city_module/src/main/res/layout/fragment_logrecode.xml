<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"></import>

        <variable
            name="log_model"
            type="com.elder.logrecodemodule.ViewModel.LogRecodeViewModel"></variable>
    </data>


    <com.elder.zcommonmodule.Widget.PoketSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/log_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapsingTbl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:contentScrim="@color/white"
                        app:expandedTitleMarginEnd="60dp"
                        app:expandedTitleMarginStart="60dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/party_top_bg"
                                app:layout_collapseMode="parallax" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d_40"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/d_44"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/d_15"
                                            android:drawableLeft="@drawable/weather_icon"
                                            android:drawablePadding="@dimen/d_05"
                                            android:gravity="center"
                                            android:text="@{log_model.weather}"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/s_12" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/d_8"
                                            android:text="@{log_model.tem}"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/s_12" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/d_8"
                                            android:text="@{log_model.week}"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/s_12" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/log_enter"
                                        android:onClick="@{log_model::onClick}"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/d_34"
                                        android:layout_marginRight="@dimen/d_15"
                                        android:layout_weight="5"
                                        android:background="@drawable/white_circle"
                                        android:gravity="center_vertical"
                                        android:clickable="true"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="@dimen/d_16"
                                            android:layout_height="@dimen/d_16"
                                            android:layout_marginLeft="@dimen/d_15"
                                            android:clickable="true"
                                            android:src="@drawable/search_icon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/d_10"
                                            android:background="@color/trans"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:clickable="true"
                                            android:text="搜索好友"
                                            android:textColor="#A4A4A4"
                                            android:textSize="@dimen/s_15" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/toLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_15"
                                    android:layout_marginTop="@dimen/d_15"
                                    android:drawablePadding="@dimen/d_05"
                                    android:drawableRight="@drawable/arrow_right"
                                    android:onClick="@{log_model::onClick}"
                                    android:text="@{log_model.loacation}"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/s_20" />


                                <LinearLayout
                                    android:id="@+id/top_div_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_15"
                                    android:layout_marginTop="@dimen/d_15"
                                    android:orientation="horizontal">

                                    <com.elder.zcommonmodule.Widget.PileLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"></com.elder.zcommonmodule.Widget.PileLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_15"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/s_15" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_20"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/half_corner_dialog"
                                android:orientation="vertical"></LinearLayout>
                        </RelativeLayout>
                        <android.support.v7.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_100"
                            android:fitsSystemWindows="true"
                            app:contentInsetStart="0dp"
                            app:layout_collapseMode="pin"
                            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                            <LinearLayout
                                android:id="@+id/log_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_15"
                                android:layout_marginRight="@dimen/d_15"
                                android:layout_marginTop="@dimen/d_20"
                                android:background="@drawable/corner_gray_bg"
                                android:gravity="center_vertical"
                                android:onClick="@{log_model::onClick}"
                                android:visibility="@{log_model.visField?View.VISIBLE:View.GONE}">

                                <ImageView
                                    android:layout_width="@dimen/d_15"
                                    android:layout_height="@dimen/d_15"
                                    android:layout_marginLeft="@dimen/d_15"
                                    android:src="@drawable/search_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/d_10"
                                    android:background="@color/trans"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="搜索好友"
                                    android:textColor="#A4A4A4"
                                    android:textSize="@dimen/s_15" />
                            </LinearLayout>
                        </android.support.v7.widget.Toolbar>
                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/toRank"
                            android:onClick="@{log_model::onClick}"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_15"
                                android:text="骑行距离 TOP10"
                                android:textColor="#121212"
                                android:textSize="@dimen/s_20" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/d_15"
                                    android:src="@drawable/arrow_right_gray" />
                            </LinearLayout>
                        </LinearLayout>


                        <RadioGroup
                            android:id="@+id/local_rg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15"
                            android:layout_marginTop="@dimen/d_15"
                            android:checkedButton="@id/local_rb"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/local_rb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/local_btn_select"
                                android:button="@null"
                                android:gravity="center"
                                android:text="@string/local"
                                android:textColor="@color/local_radio_buttom_color_selector" />


                            <RadioButton
                                android:id="@+id/nation_wide_rb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_15"
                                android:background="@drawable/local_btn_select"
                                android:button="@null"
                                android:gravity="center"
                                android:text="@string/nation_wide"
                                android:textColor="@color/local_radio_buttom_color_selector" />

                        </RadioGroup>


                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/d_15"
                            app:adapter="@{log_model.cityPartyAdapter}"
                            app:itemBinding="@{log_model.cityPartyitemBinding}"
                            app:items="@{log_model.cityPartyitems}"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15"
                            android:layout_marginTop="@dimen/d_20"
                            android:gravity="left"
                            android:text="同城俱乐部"
                            android:textColor="#121212"
                            android:textSize="@dimen/s_20"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal"
                            app:adapter="@{log_model.partyAdapter}"
                            app:itemBinding="@{log_model.partyitemBinding}"
                            app:items="@{log_model.partyitems}"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>


                        <TextView
                            android:id="@+id/hot_active"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15"
                            android:layout_marginRight="@dimen/d_10"
                            android:layout_marginTop="@dimen/d_20"
                            android:drawableRight="@drawable/arrow_right_gray"
                            android:gravity="left"
                            android:onClick="@{log_model::onClick}"
                            android:text="热门活动"
                            android:textColor="#121212"
                            android:textSize="@dimen/s_20"
                            android:visibility="gone" />


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d_15"
                            android:layout_marginTop="@dimen/d_20"
                            android:scrollbars="none"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/active_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"></LinearLayout>

                        </HorizontalScrollView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15"
                            android:layout_marginTop="@dimen/d_20"
                            android:gravity="left"
                            android:text="精彩专题"
                            android:textColor="#121212"
                            android:textSize="@dimen/s_20"
                            android:visibility="gone" />


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_20"
                            android:scrollbars="none"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/spec_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"></LinearLayout>

                        </HorizontalScrollView>

                        <TextView
                            android:id="@+id/gotoroadhome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15"
                            android:layout_marginRight="@dimen/d_10"
                            android:layout_marginTop="@dimen/d_20"
                            android:drawableRight="@drawable/arrow_right_gray"
                            android:gravity="left"
                            android:onClick="@{log_model::onClick}"
                            android:text="推荐路书"
                            android:textColor="#121212"
                            android:textSize="@dimen/s_20"
                            android:textStyle="bold" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/pool_recycle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/d_10"
                            android:layout_marginLeft="@dimen/d_10"
                            android:nestedScrollingEnabled="false"
                            app:adapter="@{log_model.staggeredAdapter}"
                            app:itemBinding="@{log_model.staggereditemBinding}"
                            app:items="@{log_model.staggereditems}"
                            app:layoutManager="android.support.v7.widget.StaggeredGridLayoutManager"
                            app:spanCount="2"></android.support.v7.widget.RecyclerView>


                        <ImageView
                            android:id="@+id/active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{log_model::onClick}"
                            android:src="@drawable/active_pic"
                            android:visibility="gone" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d_315"
                                android:src="@drawable/log_right_logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/navigation_log_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_23"
                                    android:layout_marginTop="@dimen/d_50"
                                    android:gravity="center_vertical"
                                    android:onClick="@{log_model::onClick}"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/yellow_point_shape" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_10"
                                        android:drawablePadding="@dimen/d_05"
                                        android:drawableRight="@drawable/arrow_right_gray"
                                        android:gravity="center"
                                        android:text="@string/current_total_distance"
                                        android:textColor="@color/white" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/d_10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_42"
                                        android:text="@{log_model.allTotal}"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/s_30" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_10"
                                        android:text="KM"
                                        android:textColor="@color/text_nomal_color"
                                        android:textSize="@dimen/s_15" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/navigation_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_23"
                                    android:layout_marginTop="@dimen/d_50"
                                    android:gravity="center_vertical"
                                    android:onClick="@{log_model::onClick}"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/green_point_shape" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_10"
                                        android:drawablePadding="@dimen/d_05"
                                        android:drawableRight="@drawable/arrow_right_gray"
                                        android:gravity="center"
                                        android:text="@string/current_month_total_distance"
                                        android:textColor="@color/white" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_44"
                                    android:layout_marginTop="@dimen/d_20"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@{log_model.monthTotal}"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/s_16" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="KM"
                                                android:textColor="@color/text_nomal_color"
                                                android:textSize="@dimen/s_10" />
                                        </LinearLayout>


                                        <com.dinuscxj.progressbar.CircleProgressBar
                                            android:id="@+id/mile_circle"
                                            android:layout_width="@dimen/d_66"
                                            android:layout_height="@dimen/d_66"
                                            app:drawBackgroundOutsideProgress="true"
                                            app:progress_background_color="@color/text_nomal_color"
                                            app:progress_end_color="#3B75E6"
                                            app:progress_shader="linear"
                                            app:progress_start_color="#72CFAF"
                                            app:progress_start_degree="-90"
                                            app:progress_stroke_width="@dimen/d_04"
                                            app:progress_text_color="@color/trans"
                                            app:progress_text_size="@dimen/s_16"
                                            app:style="solid_line" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/d_20">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@{log_model.monthTime}"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/s_16" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="次"
                                                android:textColor="@color/text_nomal_color"
                                                android:textSize="@dimen/s_10" />
                                        </LinearLayout>

                                        <com.dinuscxj.progressbar.CircleProgressBar
                                            android:id="@+id/time_circle"
                                            android:layout_width="@dimen/d_66"
                                            android:layout_height="@dimen/d_66"
                                            app:progress_background_color="@color/text_nomal_color"
                                            app:progress_end_color="@color/againSendColor"
                                            app:progress_stroke_width="@dimen/d_04"
                                            app:progress_text_color="@color/trans"
                                            app:progress_text_size="@dimen/s_16"
                                            app:style="solid_line" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/go_web"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_80"
                            android:layout_marginLeft="@dimen/d_10"
                            android:layout_marginRight="@dimen/d_10"
                            android:layout_marginTop="@dimen/d_10"
                            android:background="@drawable/corner_black_dialog"
                            android:gravity="center_vertical"
                            android:onClick="@{log_model::onClick}"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:singleLine="true"
                                    android:text="@string/team"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/s_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:layout_marginTop="@dimen/d_10"
                                    android:singleLine="true"
                                    android:text="@{log_model.teamStatus}"
                                    android:textColor="@color/text_nomal_color"
                                    android:textSize="@dimen/s_15" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_10"
                                android:layout_marginRight="@dimen/d_20"
                                android:src="@{log_model.teamicon?@drawable/home_team_icon:@drawable/team_fast_start}" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_10"
                            android:layout_marginRight="@dimen/d_10"
                            android:layout_marginTop="@dimen/d_15"
                            android:background="@drawable/log_botton_bg"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="@{log_model.driverType==2?View.GONE:View.VISIBLE}">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:text="@string/drivering"
                                    android:textColor="@color/text_nomal_color"
                                    android:textSize="@dimen/s_18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:layout_marginTop="@dimen/d_05"
                                    android:text="@{log_model.district}"
                                    android:textColor="@color/text_nomal_color"
                                    android:textSize="@dimen/s_12" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="@{log_model.driverType==2?View.VISIBLE:View.GONE}">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:text="@{log_model.navigationStart}"
                                    android:textColor="@color/text_nomal_color"
                                    android:textSize="@dimen/s_18" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:src="@drawable/road_direction" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d_20"
                                    android:text="@{log_model.navigationEnd}"
                                    android:textColor="@color/text_nomal_color"
                                    android:textSize="@dimen/s_18" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_20"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d_20"
                                android:drawablePadding="@dimen/d_05"
                                android:drawableRight="@drawable/arrow_right_gray"
                                android:onClick="@{log_model::onClick}"
                                android:text="精彩路书"
                                android:textColor="@color/text_nomal_color"
                                android:textSize="@dimen/s_18" />


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/bottom_pager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d_20"
                                android:layout_marginTop="@dimen/d_10"
                                android:nestedScrollingEnabled="false"
                                android:orientation="horizontal"
                                app:adapter="@{log_model.pagerAdapter}"
                                app:itemBinding="@{log_model.itemBinding}"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                app:onScrollStateChangedCommand="@{log_model.ScrollChangeCommand}"></android.support.v7.widget.RecyclerView>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.design.widget.CoordinatorLayout>
    </com.elder.zcommonmodule.Widget.PoketSwipeRefreshLayout>
</layout>
